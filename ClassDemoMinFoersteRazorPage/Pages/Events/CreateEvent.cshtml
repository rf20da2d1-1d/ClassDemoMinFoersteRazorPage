@page
@model ClassDemoMinFoersteRazorPage.Pages.Events.CreateEventModel
@{
    ViewData["Title"] = "Create A New Event";
}

<h1>Create An Event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">

            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="custom-control-label"></label>
                <input asp-for="@Model.Event.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="custom-control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.City" class="custom-control-label"></label>
                <input asp-for="@Model.Event.City" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.DateTimeOfEvent" class="custom-control-label"></label>
                <input asp-for="@Model.Event.DateTimeOfEvent" class="form-control" />
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create Event" class="btn btn-primary"/>
            </div>

        </form>
    </div>
</div>

<a asp-page="Index">Tilbage til Visning af Events</a>
